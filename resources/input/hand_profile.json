{
  "jsonid": "input_profile",
  "controller_type": "ultraleap_hand",
  "input_bindingui_mode": "controller_handed",
  "input_bindingui_left": {
    "transform": "scale(-1,1)",
    "image": "{ultraleap}/bindingui/hand.svg"
  },
  "input_bindingui_right": {
    "image": "{ultraleap}/bindingui/hand.svg"
  },
  "input_source": {
    "/input/pinch": {
      "type": "trigger",
      "binding_image_point" : [0, 0],
      "value": true,
      "order": 1
    },
    "/input/grip": {
      "type": "trigger",
      "binding_image_point" : [0, 0],
      "value": true,
      "order": 2
    },
    "/input/raw": {
      "type": "pose",
      "binding_image_point" : [0, 0]
    },

    "/input/skeleton/left" : {
      "type" : "skeleton",
      "skeleton": "/skeleton/hand/left",
      "side" : "left",
      "binding_image_point" : [ 0, 0 ]
    },
    "/input/skeleton/right" : {
      "type" : "skeleton",
      "skeleton": "/skeleton/hand/right",
      "side" : "right",
      "binding_image_point" : [ 0, 0 ]
    },

    "/input/finger/thumb" : {
      "type" : "trigger",
      "binding_image_point" : [ 0, 0 ],
      "order" : 100
    },
    "/input/finger/index" : {
      "type" : "trigger",
      "binding_image_point" : [ 0, 0 ],
      "order" : 101
    },
    "/input/finger/middle" : {
      "type" : "trigger",
      "binding_image_point" : [ 0, 0 ],
      "order" : 102
    },
    "/input/finger/ring" : {
      "type" : "trigger",
      "binding_image_point" : [ 0, 0 ],
      "order" : 103
    },
    "/input/finger/pinky" : {
      "type" : "trigger",
      "binding_image_point" : [ 0, 0 ],
      "order" : 104
    }
  },
  "default_bindings": [
    {
      "app_key": "openvr.component.vrcompositor",
      "binding_url": "bindings/openvr.component.vrcompositor.json"
    }
  ]
}